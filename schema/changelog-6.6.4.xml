<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd"
        logicalFilePath="changelog-6.6.4">

    <changeSet author="author" id="changelog-6.6.4">

        <preConditions onFail="MARK_RAN">
            <not>
                <tableExists tableName="tc_device_geofence_distance"/>
            </not>
        </preConditions>

        <createTable tableName="tc_device_geofence_distance">
            <column autoIncrement="true" name="id" type="INT">
                <constraints primaryKey="true" />
            </column>
            <column name="deviceid" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="positionid" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="geofenceid" type="BIGINT">
                <constraints nullable="false" />
            </column>
            <column name="type" type="VARCHAR(128)">
                <constraints nullable="false" />
            </column>
            <column name="totaldistance" type="DOUBLE">
                <constraints nullable="false" />
            </column>
            <column name="devicetime" type="DATETIME">
                <constraints nullable="false" />
            </column>
        </createTable>

    </changeSet>

    <changeSet author="author" id="changelog-6.6.4-indexes-device-geofence-distance">

        <createIndex tableName="tc_device_geofence_distance" indexName="idx_device_geofence_distance_deviceid">
            <column name="deviceid" />
        </createIndex>

        <createIndex tableName="tc_device_geofence_distance" indexName="idx_device_geofence_distance_deviceid_geofenceid">
            <column name="deviceid" />
            <column name="geofenceid" />
        </createIndex>

        <createIndex tableName="tc_device_geofence_distance" indexName="idx_device_geofence_distance_geofenceid">
            <column name="geofenceid" />
        </createIndex>

        <createIndex tableName="tc_device_geofence_distance" indexName="idx_device_geofence_distance_positionid">
            <column name="positionid" />
        </createIndex>

        <createIndex tableName="tc_device_geofence_distance" indexName="idx_device_geofence_distance_deviceid_type">
            <column name="deviceid" />
            <column name="type" />
        </createIndex>

    </changeSet>

</databaseChangeLog>
