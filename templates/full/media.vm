#set($subject = "$device.name: Media File Received")

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Media File Received</title>
  <style>
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      background-color: #f9fafc;
      margin: 0;
      padding: 0;
      color: #1a1a1a;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background-color: #ffffff;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
      text-align: center;
    }
    .header img {
      max-height: 60px;
    }
    .title {
      font-size: 24px;
      font-weight: bold;
      background: linear-gradient(to right, #2193b0, #6dd5ed); /* Blue gradient */
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin: 20px 0;
    }
    .content {
      font-size: 16px;
      line-height: 1.6;
      color: #333333;
      text-align: center;
      margin-top: 20px;
    }
    .info-table {
      margin: 20px auto;
      border-collapse: collapse;
      font-size: 14px;
      text-align: left;
      width: auto;
    }
    .info-table td {
      padding: 10px 20px;
      border-bottom: 1px solid #e0e0e0;
    }
    .info-table td.label {
      font-weight: bold;
      color: #555;
    }
    .footer {
      margin-top: 40px;
      font-size: 12px;
      color: #999;
    }
    .footer a {
      color: #999;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
           <img src="https://www.ridesiq.com/favicon.ico" alt="RidesIQ Logo" />
    </div>
    <div class="title">Media File Received</div>
    <div class="content">
      <p>A media file has been received from your device:</p>
      <table class="info-table">
        <tr><td class="label">Device:</td><td>$device.name</td></tr>
        <tr><td class="label">Type:</td><td>$event.getString("media")</td></tr>
        <tr>
          <td class="label">File:</td>
          <td>
            <a href="$webUrl/api/media/$device.uniqueId/$event.getString("file")">
              $event.getString("file")
            </a>
          </td>
        </tr>
        <tr><td class="label">Time:</td><td>$dateTool.format("YYYY-MM-dd HH:mm:ss", $event.eventTime, $locale, $timezone)</td></tr>
        <tr>
          <td class="label">Link:</td>
          <td><a href="$webUrl?eventId=$event.id">$webUrl?eventId=$event.id</a></td>
        </tr>
      </table>
    </div>
    <div class="footer">
      &copy; 2025 RidesIQ. All rights reserved. | <a href="https://www.ridesiq.com/privacy-policy">Privacy Policy</a><br/>
      <a href="$webUrl/settings/notifications?token=$token">Unsubscribe</a>
    </div>
  </div>
</body>
</html>
