#set($subject = "$device.name: Text Message Received")

<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Text Message Received</title>
  <style>
    body {
      font-family: 'Helvetica Neue', Helvetica, Arial, sans-serif;
      background-color: #f9fafc;
      margin: 0;
      padding: 0;
      color: #1a1a1a;
    }
    .container {
      max-width: 600px;
      margin: auto;
      background-color: #ffffff;
      padding: 40px;
      border-radius: 12px;
      box-shadow: 0 0 12px rgba(0, 0, 0, 0.05);
      text-align: center;
    }
    .header img {
      max-height: 60px;
    }
    .title {
      font-size: 24px;
      font-weight: bold;
      background: linear-gradient(to right, #ff512f, #dd2476);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      margin: 20px 0;
    }
    .content {
      font-size: 16px;
      line-height: 1.6;
      color: #333333;
      text-align: left;
      margin-top: 20px;
    }
    .content p {
      margin: 8px 0;
    }
    .footer {
      margin-top: 40px;
      font-size: 12px;
      color: #999;
    }
    .footer a {
      color: #999;
      text-decoration: underline;
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="header">
           <img src="https://www.ridesiq.com/favicon.ico" alt="RidesIQ Logo" />
    </div>
    <div class="title">Text Message Received</div>
    <div class="content">
      <p><strong>Device:</strong> $device.name</p>
      <p><strong>Message:</strong> $event.getString("message")</p>
      <p><strong>Time:</strong> $dateTool.format("YYYY-MM-dd HH:mm:ss", $event.eventTime, $locale, $timezone)</p>
    </div>
    <div class="footer">
      &copy; 2025 RidesIQ. All rights reserved. | <a href="https://www.ridesiq.com/privacy-policy">Privacy Policy</a><br/>
      <a href="$webUrl/settings/notifications?token=$token">Unsubscribe</a>
    </div>
  </div>
</body>
</html>
